+    extends BaseMapTest
+{
+    /*
+    /**********************************************************
+    /* Helper classes
+    /**********************************************************
+     */
+
+    static class Bean {
+        // no methods, we'll use our custom serializer
+    }
+
+    static class SerializerWithErrors
+        extends JsonSerializer<Bean>
+    {
